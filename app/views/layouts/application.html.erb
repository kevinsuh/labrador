<!DOCTYPE html>
<html>
	<head>
	  <title><%= full_title(yield(:title)) %></title>
	  <!-- prevent zoom on mobile -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
	  <%= render 'layouts/shim' %>
	  <%= stylesheet_link_tag    'application', media: 'all' %>
	  <%= javascript_include_tag "https://js.stripe.com/v2/" %>
	  <%= javascript_include_tag 'application' %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container main_page container-full">
			<% if logged_in? %>
				<!-- angular app only if logged in -->
				<ui-view ng-app="card-queue" ng-controller="MainController" class="cardagain"></ui-view>
			<% else %>
				<!-- non logged out home goes here -->
				<%= yield %>
				<% if false %> <%= render 'layouts/footer' %> <% end %>
			<% end %>
			<% if false # no debug params for now %>
			<%= debug(params) if Rails.env.development? %>
			<% end %>
		</div>
	</body>
</html>
