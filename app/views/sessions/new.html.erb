<% provide(:title, "Login") %>

<div class="login_container container-full">

	<div class="login_box">

		<% flash.each do |message_type, message| %>
			<div class="invalid_message"><%= message %></div>
		<% end %>

		<div class="form">

			<%= form_for :session, url: login_path, html: { class: "login_form" } do |f| %>

				<div class="form_input">
					<%= f.text_field :email, placeholder: "Email", class: 'form-control text_field' %>
					<i class="glyphicon text_field_icon glyphicon-user"></i>
				</div>

				<div class="form_input" style="margin-top: 20px;">
					<%= f.password_field :password, placeholder: "Password", class: 'form-control text_field password' %>
					<i class="glyphicon text_field_icon glyphicon-lock"></i>
				</div>
				
				<div class="form_input" style="margin-top: 12px;">

					<%= f.label :remember_me, class: "checkbox inline remember_me_container" do %>
						<%= f.check_box :remember_me, class: 'remember_me_checkbox' %>
						<span class="form_text remember_me_text">Remember me</span>
					<% end %>
					<label class="forgot_password_container">
						<%= link_to "Forgot your password?", new_password_reset_path, class: "forgot_password_link" %>
					</label>
				</div>

				<div class="form_input button_container">
					<%= f.submit "LOG IN", class: "submit_button login_button" %>
				</div>

			<% end %>

			<div class="form_input" style="margin-top: 20px; text-align: center;">
				<p class="signup_text">Don't have an account? <%= link_to "Sign Up", signup_path %></p>
			</div>
			

		</div>
	</div>
	

</div>
