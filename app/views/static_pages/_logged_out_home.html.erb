<div class="center" id="splash_page">

	<div style="margin-left: 54px; margin-top: 250px;">
		<div>
			<h1 class="tagline">Be your</h1>
			<h1 class="tagline">most thoughtful self</h1>
		</div>
		<div style="margin-top: 13px;">
			<p class="tagline_description">Deliver on the moments you think of someone.</p>
			<p class="tagline_description">We make it easy for you to write a message</p>
			<p class="tagline_description">to your favorite people for any occasion.</p>
		</div>
		<div style="margin-top: 23px;">
			<div class="button_container signup_button_container"><%= link_to "SIGN UP", signup_path, class: "submit_button main_signup_button" %></div>
		</div>
	</div>

	<% if false %>
	<div class="row row-waitlist">
		<% if @waitlist %>
			<%= @waitlist.inspect %>
		<% end %>
		<div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
			<div>
				<h3>We make it easier to send personal, hand-written cards.</h3>
			</div>
			<div>
				<h4>Be the first to know when it's ready:</h4>
			</div>
			<div>
				<%= form_for(:waitlist, url: waitlist_path) do |f| %>

					<%= f.text_field :email, { placeholder: "What's your email address?", class: "waitlist-input", value: @waitlist_email } %>
					<%= f.submit "Get queued", { id: "submit_waitlist", class: "waitlist-submit" } %>
				<% end %>
			</div>
		</div>
	</div>
	<% end %>
	<% if false %>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	<% end %>	
</div>
