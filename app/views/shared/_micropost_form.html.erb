<%= form_for @micropost, html: { class: "micropost_form", multipart: true } do |f| %>
	
	<%= render 'shared/error_messages', form_object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new tweet..." %>
	</div>
	<%= f.submit "Send tweet", class: "btn btn-primary" %>
	<span class="picture">
		<%= f.file_field :picture, accept: 'image/jpeg, image/gif,image/png' %>
	</span>
<% end %>

<script>
	$('#micropost_picture').bind('change', function() {
		size_in_megabytes = this.files[0].size/1024/1024;
		if (size_in_megabytes > 5) {
			alsert('Maximum file size is 5MB. Please choose a smaller file.')
		}
	})
</script>