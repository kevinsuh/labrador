<div class="col-s-12 col-md-10 col-md-offset-1">
  
  <h3 style="color:red; font-style:italic;" ng-hide="{{success}}">{{message}}</h3>

  <table class="table">
    <tr ng-repeat="post in posts | orderBy: 'created_at'" style="margin-bottom: 10px;">
      <td style="padding-top: 1em; width:1%; padding-right: 0; text-align: right;">
        <span style="font-size: 16px;">{{$index+1}}.</span>    
      </td>
      <td style="width: 1%; padding-top: 1em; padding-right:0;">
        <button ng-click="upvote(post)" class="glyphicon glyphicon-thumbs-up"></button>
      </td>
      <td>
        <div>
          <span ><a style="font-size:22px;" ng-show="post.link" href="{{post.link}}" target=_blank>{{post.title}}</a></span>
          <span ng-hide="post.link" style="font-size:22px;">{{post.title}}</span>
        </div>
        <div>
          <span style="font-size:12px;">{{post.upvotes}} points by {{post.name}} | {{post.created_at | timeAgoInWords }} | <a href="#/posts/{{post.id}}">{{post.comments.length}} comments</a></span>
        </div>
      </td>
    </tr>  
  </table>
  
  <div style="margin-top: 30px;">
    <h3>Add New Post</h3>
    
    <div class="form-group">
      <textarea ng-model="newPostTitle" placeholder="title"/>    
    </div>
    <div class="form-group">
      <input type="text" ng-model="newPostLink" placeholder="link">
    </div>
    <button ng-click="newPostTitle && addPost()">Add Post</button>
  </div>
</div>