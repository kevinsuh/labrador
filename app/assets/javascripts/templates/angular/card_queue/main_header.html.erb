<!-- header only if logged in -->
<nav class="header_container" ng-if="user.status.logged_in">
	<!-- floated left -->
	<div class="title_container">
		<h3 id="currentTitle" class="title">
			{{headerTitle}}
		</h3>
	</div>
	<!-- floated right this will only show up on website -->
	<div id="website_header">
		<ul class="nav navbar-nav">
			<li class="dropdown pull-right right_most">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"><img ng-src="{{user.currentUser.gravatar_url}}" alt="{{user.currentUser.first_name}}" class="user_gravatar" /></a>
				<ul class="dropdown-menu dropdown-menu-right absolute">
					<li><span style="cursor: default;">{{user.currentUser.email}}</span></li>
					<li class="divider"></li>
					<li><a href="#">Profile</a></li>
					<li><a href="#">Settings</a></li>
					<li class="divider"></li>
					<li ng-if="user.currentUser.is_admin"><span><a href="/admin/" >Admin</a></li>
					<li><span><a href="/card_survey/index">Card Survey</a></span></li>
					<li class="divider"></li>
					<li>
						<a style="cursor: pointer;" ng-click="logOut()">Log Out</a>
					</li>
				</ul>
			</li>
		</ul>
	</div>

	<!-- mobile header -->
	<div id="mobile_header" class="mobile_header_container">
		<div id="my_people_header" class="custom_header" ng-class="{'my_people': headerTitle == 'My People'}">
			my people header
		</div>
		<div id="occasions_header" class="custom_header" ng-class="{'occasions': headerTitle == 'Occasions'}">
			occasions header
		</div>

		<!-- WE ARE CHANGING THIS TO QUEUE CARD -->
		<div id="queue_card_header" class="custom_header" ng-class="{'queue_card': headerTitle == 'Greeting Central'}">
			queue card header
		</div>
		<div id="queued_cards_header" class="custom_header" ng-class="{'queued_cards': headerTitle == 'Queued Cards'}">
			queued cards header
		</div>
		<div id="settings_header" class="custom_header" ng-class="{'settings': headerTitle == 'Settings'}">
			settings header
		</div>
	</div>

</nav>
