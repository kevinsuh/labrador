<div class="calendar_section">
	<div class="calendar_view">
		<div class="table_header">
			<div class="title">
				<div>
					<span>
						Calendar
					</span>
				</div>
			</div>
			<div class="add">
				<div>
					<span ng-click="">+</span>
				</div>
			</div>
		</div>
		<!-- this is the calendar -->
		<div class="calendar_container" ng-controller="CalendarCtrl">
			<div class="calendar">
				<div class="btn-toolbar">
			    <div class="btn-group">
		        <button class="btn btn-success" ng-click="changeView('agendaDay', myCalendar)">Day</button>
		        <button class="btn btn-success" ng-click="changeView('agendaWeek', myCalendar)">Week</button>
		        <button class="btn btn-success" ng-click="changeView('month', myCalendar)">Month</button>
			    </div>
				</div>
				<div class="alert-success calAlert" ng-show="alertMessage != undefined && alertMessage != ''">
					<h4>{{alertMessage}}</h4>
				</div>
				<!-- <div ui-calendar ng-model="eventSources"></div> -->
				<div calendar="myCalendar" ng-model="eventSources" ui-calendar="uiConfig.calendar"></div>
			</div>
		</div>
	</div>
</div>
