<div style="width: 40%; margin: 0 auto;">
<datepicker date-min-limit="{{minimumRecipientDate}}" date-format="MMM d, yyyy" style="text-align:left;">
		<input style="width: 100%; display:none;" id="card_date" ng-model="newCard.recipientArrivalDate" type="text"></input>
</datepicker>
</div>

<% if false %>
<nl-select value="date.month" options="months"></nl-select> <input ng-model="date.day" type="number" min=1 max=31></input>, 20<input ng-model="date.year" type="number" min=15 max=17></input>

<div ng-show="date.day && date.year">
	({{date.month+1}}/{{date.day}}/{{date.year}})
</div>
<% end %>