<div class="personal_info_container">
	<div class="title_container" ng-click="showPersonalInfoTab()">
		<h2 class="settings_font">EDIT PERSONAL INFO</h2>
		<i class="glyphicon glyphicon-menu-right edit_settings"/>
	</div>

	<div class="body_container">

		<div class="single_row">
			<div class="category_container">
				<h3 class="category_font">
					Name
				</h3>
			</div>
			<div class="info_container">
				<h3 class="info_font">
					{{currentUser.first_name}} {{currentUser.last_name}}
				</h3>
			</div>
		</div>

		<div class="single_row">
			<div class="category_container">
				<h3 class="category_font">
					Email
				</h3>
			</div>
			<div class="info_container">
				<h3 class="info_font">
					{{currentUser.email}}
				</h3>
			</div>
		</div>

		<div class="single_row">
			<div class="category_container">
				<h3 class="category_font">
					Phone
				</h3>
			</div>
			<div class="info_container">
				<h3 class="info_font">
					{{currentUser.phone_number | tel}}
				</h3>
			</div>
		</div>

		<div class="single_row">
			<div class="category_container">
				<h3 class="category_font">
					Address
				</h3>
			</div>
			<div class="info_container" ng-show="currentUser.primary_address">
				<h3 class="info_font">
					<div class="street address_detail">
						{{currentUser.primary_address.street}}
					</div>
					<div class="suite address_detail" ng-if="finalOptions.address.suite">
						{{currentUser.primary_address.suite}}
					</div>
					<div class="street_two address_detail">
						{{currentUser.primary_address.city}}, {{currentUser.primary_address.state | stateAbbreviation}} {{currentUser.primary_address.zipcode}}
					</div>
				</h3>
			</div>
		</div>	

		<div class="single_row">
			<div class="category_container">
				<h3 class="category_font">
					Birthday
				</h3>
			</div>
			<div class="info_container" ng-show="currentUser.birth_month && currentUser.birth_day && currentUser.birth_year">
				<h3 class="info_font">
					{{currentUser.birth_month | integerToFullMonth}} {{currentUser.birth_day}}, {{currentUser.birth_year}}
				</h3>
			</div>
		</div>

	</div>
</div>

