<div class="row queued_cards_filter">
	<div class="filter_people pull-left">
		<div class="form_input">
			<input type="text" ng-model="filteredName" ng-change="recipientNameFilter(filteredName)" class="filter_people_input"><i class="glyphicon glyphicon-search search_icon"></i></input>
		</div>
	</div>
	<div class="options pull-right">
		<div class="form_input btn-group">
			<button class="filter_select dropdown-toggle" data-toggle="dropdown" ng-click='open=!open'>{{recipientsFilter}}<i class="glyphicon glyphicon-menu-down"></i></button>
			<ul class="dropdown-menu">
				<li ng-repeat="filter in filterOptions" ng-click="updateFilterView(filter); $parent.open = !$parent.open">
					<a href="#">{{filter}}</a>
				</li>
			</ul>
		</div>

		<div class="form_input">
			<a class="send_card" ng-click="checkout()" style="width: 120px;">Send Now ({{queuedCards.length}})</a>
		</div>
	</div>
</div>


<table class="queued_cards">

	<tr class="queue_row title">
		<th class="field check">
		</th>
		<th class="field person">
			<h4>Person</h4>
		</th>
		<th class="field occasion">
			<h4>Occasion</h4>
		</th>
		<th class="field card_selection">
			<h4>Card Selection</h4>
		</th>
		<th class="field occasion_date">
			<h4>Occasion Date</h4>
		</th>
		<th class="field ship_date">
			<h4>Ship Date</h4>
		</th>
	</tr>

	<tr class=" queue_row single_card" ng-repeat="queuedCard in queuedCards">
		<td class="field check">
		</td>
		<td class="field person">
			<div class="profile_picture_container">
				<div class="profile_picture">
					<img class="image" ng-src="{{queuedCard.recipient_picture}}" />
				</div>
			</div>
			<div class="name">
				{{queuedCard.recipient.first_name}} {{queuedCard.recipient.last_name}}
			</div>
		</td>
		<td class="field occasion">
			{{queuedCard.order_occasion.name}}
		</td>
		<td class="field card_selection">
			<div class="card_picture_container">
				<div class="card_picture">
					<img class="image" ng-src="{{queuedCard.card_images[0]}}" />
				</div>
			</div>
		</td>
		<td class="field occasion_date">
			{{queuedCard.recipient_arrival_date | date:"MM/dd/yyyy"}}
		</td>
		<td class="field ship_date">
			SHIP DATE?
		</td>
	</tr>

</table>

