<div class="row">
	<div class="col-sm-6 col-xs-8 filters">
		<select ng-model="recipientsFilter" ng-options="filter as filter for filter in filterOptions" ng-change="updateFilterView(recipientsFilter)"></select>
	</div>
	<div class="col-xs-2 pull-right">
		world
	</div>
</div>
<div class="row">
	<div class="col-xs-3 single_card_div" ng-repeat="recipient in visibleCurrentRecipients">
		<div class="recipient_card">
			<div class="relationship_group">
				<div class="icon_header">
					<input type="checkbox"></input>
				</div>
			</div>
			<div class="recipient_info">
				<img class="recipient_image" ng-src="{{testImage}}" />

				<div class="notifications">
				  <div class="notification_container">
				  	<a href="#" id="view_queued">
					  	<%= image_tag('queued_icon.png', alt: 'Queued Orders', class: "icon") %>
					  	<span id="queued_count" class="notification_bubble">1</span>
				  	</a>
				  </div>

				  <div class="notification_container">
				  	<a href="#" id="view_purchased">
					  	<%= image_tag('purchased_icon.png', alt: 'Purchased Orders', class: "icon") %>
					  	<span id="purchased_count" class="notification_bubble">2</span>
				  	</a>
				  </div>

				</div>
				<div class="name">
					{{recipient.first_name}} {{recipient.last_name}}
				</div>
				<!-- should go through recipient's "events" and provide appropriate divs -->
				<div class="event birthday">
					Birthday in 187 days - Mar. 13
				</div>
				<div class="event mothers_day">
					Mother's Day in 211 days
				</div>

				<div class="overlay_view">
				</div>
				<div class="recipient_options overlay">
					<div class="option_buttons">
						<button class="btn edit-recipient" ng-click="open_modal_form(recipient)"><i class="glyphicon glyphicon-pencil"></i></button>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>