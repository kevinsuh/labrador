<div class="wizard_body">

	<div class="row title_row">
		<!-- occasion title -->
		<div ng-show="queueCardPage.name == 'Occasion'">
			<div class="inner_container back_container" ng-click="resetMyPeopleState()">
				<i class="glyphicon glyphicon-menu-left"/>
			</div>
			<div class="inner_container title_container">
				<h3 class="title">What's the Occasion?</h3>
			</div>
		</div>
		<!-- color title -->
		<div ng-show="queueCardPage.name == 'Color'">
			<div class="inner_container back_container" ng-click="queueCardPage.name = 'Occasion'">
				<i class="glyphicon glyphicon-menu-left"/>
			</div>
			<div class="inner_container title_container">
				<h3 class="title">Choose a color!</h3>
			</div>
		</div>
	</div>

	<div class="section">

		<div class="occasions_container body" ng-show="queueCardPage.name == 'Occasion'">

			<div class="col-xs-6 occasion_container just_because">
				<div class="occasion_card" ng-click="selectOccasion('just_because')">
					<div class="title_container">
						Just Because
					</div>
				</div>
			</div>

			<div class="col-xs-6 occasion_container" ng-repeat="occasion in occasionsForSelectedRecipients">
				<div class="occasion_card" ng-click="selectOccasion(occasion)">
					<div class="title_container">
						{{occasion.occasion.name}} ({{daysFromToday(occasion.month, occasion.day)}} away)
					</div>
				</div>
			</div>
		</div>

		<div class="colors_container body" ng-show="queueCardPage.name == 'Color'">
			<div class="col-xs-6 color_container" ng-repeat="color in cardColors">
				<div class="color_card" ng-click="selectColor(color)">
				</div>
			</div>
		</div>

		</div>

	</div>

</div>
