					      <input ng-model="newAddress.zipcode" type="text" placeholder="Zip"/>
					    </div>
						</div>

						<div class="country">
							<div class="form_input">
								<country-select data-ng-model="newAddress.country"></country-select>
							</div>
						</div>
					</div>

					<div class="options form_field">
