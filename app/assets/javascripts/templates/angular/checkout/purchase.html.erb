<div class="payment_div">

	<div class="subtotal">
		<h3>Subtotal ({{queuedCards.length}} Cards): ${{queuedCards.length * 5}}.00</h3>
	</div>

	<div class="user_information">
		<div class="shipping">

			<div class="header">
				<h6 class="header_title">Shipping Info</h6>
				<div class="options">
					<a href="#">new</a> / <a href="#">edit</a> / <a href="#">change</a>
				</div>
			</div>

			<!-- this will be your saved primary address -->
			<div class="address_info current">
				<div class="name detail">
					{{user.primary_address.first_name}} {{user.primary_address.last_name}}
				</div>
				<div class="street detail">
					{{user.primary_address.street}}
				</div>
				<div class="street_two detail">
					{{user.primary_address.city}}, {{user.primary_address.state}} {{user.primary_address.zipcode}}
				</div>
			</div>

			<div class="address_list">
				<div class="address_info" ng-repeat="address in user.addresses">
					<div class="name detail">
						{{address.first_name}} {{address.last_name}}
					</div>
					<div class="street detail">
						{{address.street}}
					</div>
					<div class="street_two detail">
						{{address.city}}, {{address.state}} {{address.zipcode}}
					</div>
				</div>
			</div>

			<!-- update address form -->
			<div class="address">
				<div class="name form_field">
					<div class="name">
						<div class="form_input">
				      <input ng-model="recipient.primary_address.street" type="text" placeholder="Name"/>
				    </div>
					</div>
				</div>
				<div class="street form_field">
					<div class="street">
						<div class="form_input">
				      <input ng-model="recipient.primary_address.street" type="text" placeholder="Street"/>
				    </div>
					</div>
				</div>

				<div class="address_other form_field">
					<div class="city">
						<div class="form_input">
				      <input ng-model="recipient.primary_address.city" type="text" placeholder="City"/>
				    </div>
					</div>

					<div class="state">
						<div class="form_input">
							<select ng-model="recipient.primary_address.state">
					  		<option value="">State</option>
					  		<% us_states.each { |state, abrv| %>
					  			<option value="<%= state %>"><%= abrv %></option>
								<% } %>
					  	</select>
						</div>
					</div>

					<div class="zip">
						<div class="form_input">
				      <input ng-model="recipient.primary_address.zipcode" type="text" placeholder="Zip"/>
				    </div>
					</div>

					<div class="country">
						<div class="form_input">
							<country-select data-ng-model="recipient.primary_address.country"></country-select>
						</div>
					</div>
				</div>

				<div class="options form_field">
					<div class="options">
						<div class="form_input save_address">
				      <input id="save_address" class="checkbox" ng-model="recipient.primary_address.street" type="checkbox"/><label for="save_address">Save Address</label>
				    </div>
				    <div class="form_input">
				      <a href="#" class="change_address">Change</a>
				    </div>
					</div>
				</div>

			</div>

			<!-- this will also display your other saved addresses -->

		</div>
		<div class="payment">
			<div class="header">
				<h6 class="header_title">Payment Method</h6>
			</div>
		</div>
	</div>

</div>