<div class="form_field email" ng-class="{'has-error': hasError('email')}">
  <label for="signup_email" class="form_label">
    <span class="helper" ng-class="{'completed': basicInfoForm.email.$valid}">
      Enter your email address
    </span>
  </label>
  <div class="form_input">
    <input id="signup_email" name="email" ng-model="user.email" type="email" placeholder="ex. kevin@cardagain.com" required />
  </div>

  <div class="invalid-message-holder">
    <div class="invalid-message" ng-messages="basicInfoForm.email.$error" ng-show="showMessages('email')">
      <div class="message-animation" ng-message="email">
        <strong>Please format your email correctly!</strong>
      </div>
      <div class="message-animation" ng-message="required">
        <strong>This is required!</strong>
      </div>
    </div>
  </div>

</div>


<div class="form_field password" ng-class="{'has-error': hasError('password')}">
  <label for="password" class="form_label">
    <span class="helper" ng-class="{'completed': basicInfoForm.password.$valid }">
      Password
    </span>
  </label>

  <div class="form_input">
    <input id="password" type="password" name="password" ng-model="user.password" placeholder="*******" validate-password required/>
  </div>
  <div class="password-requirements">
    <ul class="float-left">
      <li class="helper" ng-class="{'completed':!basicInfoForm.password.$error.sixCharacters, 'has-error': passwordError(basicInfoForm.password.$error)}">At least 6 characters</li>
      <li>|</li>
      <li class="helper" ng-class="{'completed':!basicInfoForm.password.$error.number, 'has-error': passwordError(basicInfoForm.password.$error)}">One number</li>
    </ul>
  </div>
</div>

<div class="form_field password" ng-class="{'has-error': hasError('password_confirmation')}">
  <label for="password_confirmation" class="form_label">
    <span class="helper" ng-class="{'completed': basicInfoForm.password_confirmation.$valid }">
      Confirm Password
    </span>
  </label>
  <div class="form_input">
    <input type="password" id="password_confirmation" name="password_confirmation" ng-model="user.password_confirmation" placeholder="*******" required compare-to="user.password"/>
  </div>

  <div class="invalid-message-holder">
     <div class="invalid-message" ng-messages="basicInfoForm.password_confirmation.$error" ng-show="showMessages('password_confirmation')">
      <div class="message-animation" ng-message="required">
        <strong> 
          Password confirmation is required.
        </strong>
      </div>

      <div class="message-animation" ng-message="compareTo">
        <strong>
          Your passwords don't match!
        </strong>
      </div>
    </div>
  </div>
 

</div>

<div class="form_field submit">
  <div class="form_input">
    <a ng-click="fieldsAreValid(['email', 'password', 'password_confirmation']) && validateBasicFields()" class="btn submit-btn next-btn" ng-class="{'disabled': !fieldsAreValid(['email', 'password', 'password_confirmation'])}">Next <i class="glyphicon glyphicon-arrow-right"></i></a>
    <!-- ui-sref="form.address" -->
  </div>
</div>
