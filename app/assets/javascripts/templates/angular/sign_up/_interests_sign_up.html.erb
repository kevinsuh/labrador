

<%
def months
  [
    [1, 'January'],
    [2, 'February'],
    [3, 'March'],
    [4, 'April'],
    [5, 'May'],
    [6, 'June'],
    [7, 'July'],
    [8, 'August'],
    [9, 'September'],
    [10, 'October'],
    [11, 'November'],
    [12, 'December']
  ]
end
%>

<div class="birthday_container form_row">
  <div class="title_container">
    <h3 class="form_input_title address_title">Birthday</h3>
  </div>
  <div class="birthday_input_container">
    <div class="month_container form_input_container">
      <div class="form_input">
        <select name="birth_month" class="recipient_form_input select_input state_input" ng-model="user.birth_month">
          <option value="">Month</option>
          <% months.each { |num, name| %>
            <option value="<%= num %>"><%= name %></option>
          <% } %>
        </select>
        <i class="glyphicon glyphicon-menu-down month_menu_down"></i>
      </div>
    </div>
    <div class="day_container form_input_container">
      <div class="form_input">
        <input name="birth_day" class="recipient_form_input" ng-model="user.birth_day" type="number" min="1" max="31" placeholder="Day" required/>
      </div>
    </div>
    <div class="year_container form_input_container">
      <div class="form_input">
        <input name="birth_year" class="recipient_form_input" ng-model="user.birth_year" type="number" min="1900" max="2015" placeholder="Year" required/>
      </div>
    </div>
  </div>
</div>

<div class="form_field street validation_field" ng-class="{'has-error': hasError('phone_number')}">
  <div class="title_container">
    <h3 class="form_input_title address_title">Phone Number</h3>
  </div>
  <div class="form_input">
      <input class="recipient_form_input" name="phone_number" ng-model="user.phone_number" phone-input type="tel" validate-phone-number placeholder="Phone Number"/>
    </div>
</div>

<div class="form_field street validation_field" ng-class="{'has-error': hasError('street')}">
  <div class="title_container">
    <h3 class="form_input_title address_title">Address</h3>
  </div>
  <!-- <label for="street" class="form_label">
    <span class="helper" ng-class="{'completed': isValid('street')}">
      Street
    </span>
  </label> -->

  <div class="form_input">
    <input id="street" type="text" name="street" ng-model="user.address.street" placeholder="Address Line 1" required/>
  </div>

</div>

<div class="form_field suite">
  <!-- <label for="suite" class="form_label">
    <span class="helper" ng-class="{'completed': isValid('suite')}">
      Suite / Floor Number
    </span>
  </label> -->

  <div class="form_input">
    <input id="suite" type="text" name="suite" ng-model="user.address.suite" placeholder="Address Line 2" style="width: 100%;"/>
  </div>
</div>

<div class="form_field city validation_field" ng-class="{'has-error': hasError('city')}">
  <!-- <label for="city" class="form_label">
    <span class="helper" ng-class="{'completed': isValid('city')}">
      City
    </span>
  </label> -->

  <div class="form_input">
    <input id="city" type="text" name="city" ng-model="user.address.city" placeholder="City" required/>
  </div>

</div>

<div class="form_field state validation_field" ng-class="{'has-error': hasError('state')}">
  <!-- <label for="state" class="form_label">
    <span class="helper" ng-class="{'completed': isValid('state')}">
      State
    </span>
  </label> -->

  <div class="form_input">
    <select id="state" name="state" ng-model="user.address.state" required>
      <option value="">State</option>
      <% us_states.each { |state, abrv| %>
        <option value="<%= state %>"><%= abrv %></option>
      <% } %>
    </select>
  </div>
</div>

<div class="form_field zipcode validation_field" ng-class="{'has-error': hasError('zipcode')}">
  <!-- <label for="zipcode" class="form_label">
    <span class="helper" ng-class="{'completed': isValid('zipcode')}">
      Zip Code
    </span>
  </label> -->

  <div class="form_input">
    <input id="zipcode" type="text" name="zipcode" ng-model="user.address.zipcode" placeholder="Zip Code" required/>
  </div>

</div>

<div class="form_field submit" style="margin-top: 0;">
  <div class="form_input">
    <a ng-click="fieldsAreValid(['phone_number', 'birth_month', 'birth_day', 'birth_year', 'street', 'suite', 'city', 'state', 'zipcode']) && createAdvancedInfo()" class="btn submit-btn next-btn full-width" ng-class="{'disabled': !fieldsAreValid(['phone_number', 'birth_month', 'birth_day', 'birth_year', 'street', 'suite', 'city', 'state', 'zipcode'])}">SUBMIT</a>

