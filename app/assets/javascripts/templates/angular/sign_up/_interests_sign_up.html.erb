<!-- first name -->
<div class="form_field username validation_field" ng-class="{'has-error': hasError('username')}">
  <div class="form_input">
    <input id="username" placeholder="Username" name="username" ng-model="user.username" validate-username type="text" required />
  </div>
</div>

<div class="form_field password validation_field" ng-class="{'has-error': hasError('password')}">
  <!-- <label for="password" class="form_label">
    <span class="helper" ng-class="{'completed': basicInfoForm.password.$valid }">
      Password
    </span>
  </label> -->

  <div class="form_input">
    <input id="password" type="password" name="password" ng-model="user.password" placeholder="Password" validate-password required/>
  </div>
  <div class="password-requirements">
    <ul class="float-left">
      <li class="helper" ng-class="{'completed':!basicInfoForm.password.$error.sixCharacters, 'has-error': passwordError(basicInfoForm.password.$error)}">At least 6 characters</li>
      <li>|</li>
      <li class="helper" ng-class="{'completed':!basicInfoForm.password.$error.number, 'has-error': passwordError(basicInfoForm.password.$error)}">One number</li>
    </ul>
  </div>
</div>

<div class="form_field password validation_field" ng-class="{'has-error': hasError('password_confirmation')}">
  <!-- <label for="password_confirmation" class="form_label">
    <span class="helper" ng-class="{'completed': basicInfoForm.password_confirmation.$valid }">
      Confirm Password
    </span>
  </label> -->
  <div class="form_input">
    <input type="password" id="password_confirmation" name="password_confirmation" ng-model="user.password_confirmation" placeholder="Repeat Password" required compare-to="user.password"/>
  </div>

  <div class="invalid-message-holder">
     <div class="invalid-message" ng-messages="basicInfoForm.password_confirmation.$error" ng-show="showMessages('password_confirmation')">
      <div class="message-animation" ng-message="required">
        <strong> 
          Password confirmation is required.
        </strong>
      </div>

      <div class="message-animation" ng-message="compareTo">
        <strong>
          Your passwords don't match!
        </strong>
      </div>
    </div>
  </div>
 

</div>


<div class="form_field submit">
  <div class="form_input">
    <a class="btn submit-btn back-button" ui-sref-active="active" ui-sref="form.profile">BACK</a>
    <a ng-click="fieldsAreValid(['username', 'password', 'password_confirmation']) && submitSignupForm()" class="btn submit-btn next-btn" ng-class="{'disabled': !fieldsAreValid(['username', 'password', 'password_confirmation'])}">CREATE MY ACCOUNT</a>
  </div>
</div>

<div ng-show="">
	{{}}
</div>
